@model Reviso.TimeTracker.UI.Models.TimeEntryIndexViewModel
@using Reviso.TimeTracker.UI.Content
@{
    ViewBag.Title = "Index";
}
<p>
    <div>
        <h3>@Html.ActionLink(Resources.TimeTracker_Index_CreateNew, "Create")</h3>
    </div>
    <br/>
    <div><b>Recent Entries</b></div>
    <br/>
    @{var headerRow = Model.TimeEntries.FirstOrDefault(); }
    <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => headerRow.EntryDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => headerRow.ProjectName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => headerRow.Hours)
                </th>
                <th></th>
            </tr>
        @foreach (var item in Model.TimeEntries)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hours)
                </td>
                <td>
                    @Html.ActionLink(Resources.TimeTracker_Index_Edit, "Edit", new { id = item.Id}) |
                    @Html.ActionLink(Resources.TimeTracker_Index_Delete, "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</p>
