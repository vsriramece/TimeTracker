@model Reviso.TimeTracker.UI.Models.ReportSummary
@{
    ViewBag.Title = "Report Summary";
}
@if (Model.ProjectSummary == null || Model.ProjectSummary.Count() == 0)
{
    <div>No records found. Please select a valid date range!</div>
}
else
{
    <h2>Summary</h2>
    <br />
    <div>Period Start Date: @Model.StartDate.ToString("MMMM dd, yyyy")</div>
    <div>Period End Date  : @Model.EndDate.ToString("MMMM dd, yyyy")</div>
    <br />
    <table class="table">
        @{var headerRow = Model.ProjectSummary.FirstOrDefault(); }
        <tr>
            <th>
                @Html.DisplayNameFor(model => headerRow.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerRow.TotalHours)
            </th>
        </tr>
        @foreach (var item in Model.ProjectSummary)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalHours)
                </td>
            </tr>
        }
    </table>

    <div><h2><b>Total Hours: @Model.TotalHours</b></h2></div>
    <br />
    <br />
    <div>To do - Generate Invoice based on the summary!</div>
    <br />
    <br />
            }
<div>
    @Html.ActionLink("Back to Home", "Index")
</div>
